<%= form_for [user, cohort], url: url do |f| %>

  <div class="field form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "off", class: "form-control" %>
    <%= display_object_field_errors(cohort, :name) %>
  </div>

  <div class="field form-group">
    <%= f.label :start_date %><br />
    <%= f.date_field :start_date, autofocus: true, autocomplete: "off", class: "form-control" %>
    <%= display_object_field_errors(cohort, :start_date) %>
  </div>

  <div class="field form-group">
    <%= f.label :end_date %><br />
    <%= f.date_field :end_date, autofocus: true, autocomplete: "off", class: "form-control" %>
    <%= display_object_field_errors(cohort, :end_date) %>
  </div>

  <%= f.hidden_field :instructor_id, value: user.id %>

  <div class="actions">
    <%= f.submit button_name, class: "btn btn-primary" %>
  </div>
<% end %>