<h3 class="cohort-link"><%= link_to "<< Back", user_cohorts_path(@user) %></h3>
<h2 class="hdr">Create Cohort</h2>

<%= form_for [@user, @cohort] do |f| %>

  <div class="field form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :start_date %><br />
    <%= f.date_field :start_date, autofocus: true, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :end_date %><br />
    <%= f.date_field :end_date, autofocus: true, autocomplete: "off", class: "form-control" %>
  </div>

  <%= f.hidden_field :instructor_id, value: @user.id %>

  <div class="actions">
    <%= f.submit "Create Cohort", class: "btn btn-primary" %>
  </div>
<% end %>