<h3 class="student-show-link"><%= link_to "<< Back", url_for(:back) %></h3>
<h1><%= @cohort.name %></h1>
<h3>Cohort Lead: <%= @cohort.instructor.full_name %></h3>
    <br/>
    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Student Name</th>
          <th scope="col">Email</th>
          <th scope="col">Slack</th>
          <th scope="col">Learn Profile</th>
          <th scope="col">Completed Lessons</th>
          <th scope="col">Current Lesson</th>
        </tr>
      </thead>
      <tbody>
        <% @cohort.current_students.sort_by{|s| s.first_name}.each.with_index(1) do |student, i| %>
          <tr>
            <th scope="row"><%= i %></th>
            <td class="cohort-link"><%= link_to student.full_name, admin_cohort_student_path(@cohort, student) %></td>
            <td><%= student.email %></td>
            <td><%= student.slack_username %></td>
            <td class="cohort-link"><%= student.learn_profile ? (link_to "Profile", student.learn_profile, target: :_blank) : "N/A" %></td>
            <td><%= student.total_lessons_completed %></td>
            <td><%= student.meetings.length > 0 ? student.meetings.sort_by{|m| m.date}.last.current_lesson : "N/A" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>