<h3 class="cohort-link"><%= link_to "<< To Users", admin_users_path %></h3>
<h1>Cohort List</h1>
<br/>
<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Instructor</th>
      <th scope="col">Learn Batch</th>
      <th scope="col">Start Date</th>
      <th scope="col">End Date</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% Cohort.all.each.with_index(1) do |cohort, i| %>
      <tr>
        <th scope="row"><%= i %></th>
        <td class="cohort-link"><%= link_to cohort.name, admin_cohort_path(cohort) %></td>
        <td><%= cohort.instructor.full_name %></td>
        <td><%= cohort.batch_id ? (link_to cohort.batch_id, "https://learn.co/batches/#{cohort.batch_id}", target: :_blank) : "" %></td>
        <td><%= cohort.start_date %></td>
        <td><%= cohort.end_date %></td>
        <td><%= link_to "Edit", edit_admin_cohort_path(cohort) %></td>
        <td><%= link_to "Delete", admin_cohort_path(cohort), 'data-confirm': "Are you sure you want to delete #{cohort.name}?", method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>